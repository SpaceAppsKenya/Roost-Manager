<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyProductionActivity" >
	
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
   
    >
        
    <EditText 
        android:id="@+id/noOfEggs"
        style="@style/custEditText"
        android:inputType="number"
        android:hint="No. of eggs"
       />
   
    
    <EditText 
        android:id="@+id/kgsOfFeed"
        style="@style/custEditText"
        android:inputType="text"
        android:hint="Kgs of feed"
       />
    
     <EditText 
        android:id="@+id/chickenSold"
        style="@style/custEditText"
        android:inputType="text"
        android:hint="Chicken sold"
       />
     
      <EditText 
        android:id="@+id/eggsSold"
        style="@style/custEditText"
        android:inputType="text"
        android:hint="Eggs sold"
       />
      
       <EditText 
        android:id="@+id/priceEgg"
        style="@style/custEditText"
        android:inputType="text"
        android:hint="Price per egg"
       />
       
        <EditText 
        android:id="@+id/priceChicken"
        style="@style/custEditText"
        android:inputType="text"
        android:hint="Price per chicken"
       />
        
        <Button
        android:id="@+id/Save"
        style="@style/custButton1"
        android:layout_marginTop="30dp"
        android:onClick="loginListener"
        android:text="@string/save_button" />
    
	</LinearLayout>
</ScrollView>