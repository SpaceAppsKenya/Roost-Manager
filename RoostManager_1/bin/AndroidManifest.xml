<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roostmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.holoeverywhere.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Holo.Theme.Light.NoActionBar" >
        <activity
            android:name="com.example.roostmanager.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.roostmanager.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.example.roostmanager.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.example.roostmanager.ReportingActivity"
            android:label="@string/title_activity_reporting"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.example.roostmanager.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.Sherlock.Light" >
        </activity>
        <activity
            android:name="com.example.roostmanager.DailyProductionActivity"
            android:label="@string/title_activity_daily_production" >
        </activity>
        <activity
            android:name="com.example.roostmanager.PhysicalFacilityActivity"
            android:label="@string/title_activity_physical_facility" >
        </activity>
    </application>

</manifest>